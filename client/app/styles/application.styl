@font-face
    font-family: styled
    src: url('/fonts/maven-pro-light-300.otf');

@font-face
    font-family: main
    src: url('/fonts/signika-regular.ttf');


bgcolor = #fcfcfc
uploadcolor = #34a6ff
darkgrey = #444
basecolor = lightgrey
orange = #fe8800
blue = #34a6ff
bluegreen = #34A6BB


body
    height 96%
    padding 1%
    background-color bgcolor

// # commons

#album, #album-list
    font-family main

h1, h4
    font-family styled

.flatbtn
    margin-bottom 20px
    display block
    line-height 20px
    font-size 18px
    margin 2px 1%
    padding 10px 2%
    background-color blue
    color white
    cursor pointer
    text-transform capitalize
    width 30%
    float left
    border 0

    span
        text-align center
        margin-left: 10px

    i
        vertical-align baseline

.flatbtn:hover
    background-color orange
    color white
    text-decoration none

.flatbtn:focus
    background-color blue
    color white
    text-decoration none

.flatbtn:active
.flatbtn:focus
    background orange
    box-shadow 1px 3px 2px rgba(0, 0, 0, 0.2) inset

@media (max-width: 1210px)
    .flatbtn
        width 36%

@media (max-width: 767px)
    .flatbtn
        width 19%

button.delete
    position absolute
    top 1px
    right 1px
    z-index 2
    padding 5px
    width: auto


// #### album list page ###

.albumitem
    height 220px
    float left
    padding 10px

    a
        display block
        margin-right 10px
        box-sizing border-box
        border-radius 2px
        border 1px solid blue
        box-shadow 3px 3px 3px darkgrey
        transition .2s ease-out
        -webkit-transition .2s ease-out
        overflow hidden
        width 180px
        height 180px

        img
            width 180px
            height 180px

    h4
        width: 180px
        margin: 0
        padding: 10px 0
        font-weight: normal

    a:hover
        border 1px solid orange

    a:active
        transition 0s ease-out
        -webkit-transition 0s ease-out
        box-shadow: 0px 0px 0px darkgrey

    .text
        margin-left 180px

// #### album page ###

#album
    padding: 0

#links
    margin-bottom: 20px

    a
        margin: 0 10px 10px 0

#about
    height 90%

    #description
        text-align justify
        padding 1px
        border 0px

    #title
    #description
        font-weight: normal
        padding: 8px

    #title:active
    #description:active
        outline 0

#album.editing
    #title:focus
    #description:focus
        outline 1px solid blue

    #title:hover
    #description:hover
        outline 1px solid orange

#photos
    min-height 300px
    box-sizing border-box

    &.dragover
        background-color orange

    #uploader
        opacity 0.0001
        display block
        // z-index -1
        height 100%
        font-size 30em
        line-height 100px
        position absolute

    .photo
        float left
        margin 5px
        position relative

        a
            display block
            width 150px
            height 150px
            vertical-align bottom
            overflow hidden
            background rgba(0,0,0,0.1)
            transition .4s ease-out
            -webkit-transition .4s ease-out
            border 1px solid transparent
            border: 0
            padding: 0
            outline: 0

            img
                width 100%
                height 100%

    .photo .progressfill
        width 100%
        height 0%
        position absolute
        bottom 0px
        background-color uploadcolor
        transition .3s
        -webkit-transition .3s

    .photo a.thumbed
        border 1px solid uploadcolor

    .photo:hover
        transform scale(1.5)
        -webkit-transform scale(1.5)
        z-index 3

        a
            border: 0
            padding: 0
            outline: 0
            box-shadow 0 0 0 2px #FFF, 2px 2px 2px 2px #BBB
            transition .1s
            -webkit-transition:0.1s

        img
            border: 0
            transform scale(1.2)
            -webkit-transform scale(1.2)

.editing #photos.empty
    border 1px solid orange

.modal
    border-radius 0px
    border 0px
    input
    select
        border: 1px solid lightgrey
        box-shadow: 0
        border-radius: 0px
        shadow: none
        font-family: styled, helvetica

    input.disabled
        border: 1px solid transparent

    input:hover
    select:hover
        border: 1px solid orange
        border-radius: 0px
        shadow: inset 1px 1px 2px rgba(100, 100, 100, 0.1)
        color: #333

    input:focus
    input:active
    select:active
    select:focus
        border: 1px solid blue
        box-shadow: none

.modal-header
    background-color bluegreen
    color white
    font-family styled
    border-top-left-radius: 5px
    border-top-right-radius: 5px

    h3
        font-weight: normal

#clearance-modal
#share-modal
#add-contact-modal
    border-radius: 5px

    a.flatbtn
        float: right

        span
            margin: 0

.modal-footer
    padding: 8px
    border: 0
    background: transparent

    a.flatbtn
        float: right
        text-align: left
        width: auto
        padding: 8px
        line-height: 16px
        font-size:  16px
        text-transform: lowercase

        span
            text-align: left

    a.flatbtn.active
        background-color: blue - 20%

#uploadblock
    width: 130px
    height: 130px
    display none
    margin 0px
    overflow hidden
    padding: 10px
    margin 5px
    position relative
    text-align center
    transition height 1s
    text-transform: lowercase

#uploadblock.photo:hover
    transform scale(1)
    -webkit-transform scale(1)
    cursor: pointer

.editing #uploadblock
    display block

 .pbCaptionText
     .btn-group
         margin-left: 30px

