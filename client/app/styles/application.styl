.mode-public .flatbtn
.mode-public .flatbtn.startediting
.mode-public .create
.mode-owner .empty .help
.stopediting
.flatbtn
.delete
.editing .flatbtn.startediting
.editing .flatbtn.download
.mode-owner.editing .empty .help
    display none

.editing .flatbtn
.editing .delete
.mode-public .flatbtn.back
.flatbtn.back
.flatbtn.startediting
.flatbtn.download
.mode-public .empty .help
    display block

// # Remove effect from photobox //

#pbOverlay.show .imageWrap img,
#pbOverlay.show .imageWrap img,
#pbOverlay.on .imageWrap img,
#pbOverlay .imageWrap img,
#pbOverlay .imageWrap img.prepare,
#pbOverlay.hide .imageWrap img,
#pbOverlay.hide .imageWrap img.prepare,
#pbOverlay .imageWrap img.zoomable
     transform none
     -webkit-transform none
     -ms-transform none
     transition 0s
     -webkit-transition 0s
     -ms-transition 0s
     transition-delay 0s
     -webkit-transition-delay 0s
     -ms-transition-delay 0s

@media (max-width: 700px)
    .flatbtn
        width: auto

