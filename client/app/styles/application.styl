@font-face
    font-family: styled
    src: url('/fonts/maven-pro-light-300.otf');

@font-face
    font-family: main
    src: url('/fonts/signika-regular.ttf');

bgcolor = #fcfcfc
shadowcolor = #444
basecolor = lightgrey
highlightcolor = #fe8800
buttoncolor = #34a6ff
uploadcolor = #34a6ff


body
  height 97%
  padding-top 1%
  background-color bgcolor


// # commons
#album, #album-list
  font-family main

h1, h4
  font-family styled


.flatbtn
  margin-bottom 20px
  display block
  line-height 20px
  font-size 18.5px
  margin 2px 1%
  padding 10px 1%
  background-color buttoncolor
  color white
  cursor pointer
  text-transform capitalize
  width 21%
  float left

  span
    text-align center

  i
    vertical-align baseline
    margin-right 2px

.flatbtn:hover
  background-color highlightcolor
  color white
  text-decoration none

.flatbtn:focus
  background-color buttoncolor
  color white
  text-decoration none


@media (max-width: 1210px)
  .flatbtn
    width 46%

@media (max-width: 767px)
  .flatbtn
    width 21%



btn.delete
  position absolute
  top 1px
  right 1px
  z-index 2

#title
  clear both

// #### album list page ###

.albumitem
  width 30%
  min-width 450px
  height 120px
  float left
  padding 10px
  position relative

  a
    display block
    float left
    margin-right 10px
    box-sizing: border-box
    border-radius 10px
    border 2px solid shadowcolor
    box-shadow: 3px 3px 3px shadowcolor
    margin-right 20px
    width 100px
    height 100px
    transition .2s ease-out
    -webkit-transition .2s ease-out
    overflow hidden

    img
      width 100px
      height 100px

  a:hover
    border 2px solid highlightcolor

  a:active
    transition 0s ease-out
    -webkit-transition 0s ease-out
    box-shadow: 0px 0px 0px shadowcolor

// #### album page ###

#about
  height 90%

  #description
    text-align justify
    padding 1px
    border 0px


#photos
  min-height 300px

  .photo
    float left
    margin 5px
    position relative

    a
      display block
      width 75px
      height 68px
      vertical-align bottom
      overflow hidden
      background rgba(0,0,0,0.1)
      transition .4s ease-out
      -webkit-transition .4s ease-out
      border 1px solid transparent

      img
        width 100%
        height 100%

  .photo .progressfill
    width 100%
    height 0%
    position absolute
    bottom 0px
    background-color uploadcolor
    transition .3s
    -webkit-transition .3s

  .photo a.thumbed
    border 1px solid uploadcolor

  .photo:hover
    transform scale(1.5)
    -webkit-transform scale(1.5)
    z-index 3

    a
      border 1px solid white
      box-shadow 0 0 0 2px #FFF, 0 0 20px 5px #000
      transition .1s
      -webkit-transition:0.1s

    img
      transform scale(1.2)
      -webkit-transform scale(1.2)

.editing #photos.empty
  border 1px dashed basecolor

#photos.dragover
  background-color lightgreen


.modal
  border-radius 0px
  border 0px
.modal-header
  background-color buttoncolor
  color white
  font-family styled

// ### Logic ###
.mode-public .flatbtn
.mode-public .flatbtn.startediting
.mode-public .create
.mode-owner.empty .help
.mode-owner .empty .help
.help
.helpedit
.stopediting
.flatbtn
.delete
.editing .flatbtn.startediting
.editing .flatbtn.download
  display none

.editing .flatbtn
.editing .delete
.mode-public .flatbtn.back
.flatbtn.back
.flatbtn.startediting
.flatbtn.download
.empty .help
.editing .empty .helpedit
  display block

